{
  "name": "wunderbaren-server",
  "version": "0.0.1",
  "description": "graphql backend of wunderbaren",
  "main": "index.js",
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register ./src/server.ts",
    "dev": "nodemon log_level=debug log_data",
    "package": "npm run build && pkg build/index.js --output build/pos",
    "build": "tsc",
    "lint": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "author": "munhunger",
  "license": "ISC",
  "dependencies": {
    "typescript": "3.8.3",
    "winston": "3.2.1",
    "chalk": "3.0.0",
    "datason": "1.0.5",
    "express": "4.17.1",
    "express-graphql": "^0.8.0",
    "graphql": "^14.2.1",
    "cors": "2.8.5",
    "dateformat": "3.0.3",
    "graphql-subscriptions": "^1.1.0",
    "subscriptions-transport-ws": "^0.9.16",
    "graphql-tools": "4.0.5",
    "apollo-server-express": "2.9.0",
    "apollo-boost": "0.4.4",
    "wunderbaren-client": "file:../client"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.3",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/node": "^13.9.1",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^1.0.0-beta.2",
    "graphql-import-node": "0.0.4",
    "nodemon": "2.0.2",
    "pkg": "4.4.4",
    "ts-node": "8.6.2",
    "tslint": "6.1.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
