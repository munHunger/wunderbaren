<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory name="localConnection">
        <property name="hibernate.dialect">
            org.hibernate.dialect.PostgreSQL95Dialect
        </property>
        <property name="hibernate.connection.driver_class">
            org.postgresql.Driver
        </property>

        <property
                name="hibernate.connection.url">
            jdbc:postgresql://localhost:5433/profile
        </property>
        <property name="hibernate.connection.username">
            postgres
        </property>
        <property name="hibernate.connection.password">
            postgres
        </property>
        <property name="hibernate.hbm2ddl.auto">
            update
        </property>
        <property name="show_sql">
            false
        </property>

        <mapping class="se.munhunger.wunderbaren.model.persistant.ItemGroup" />
        <mapping class="se.munhunger.wunderbaren.model.persistant.Item" />
        <mapping class="se.munhunger.wunderbaren.model.persistant.Transaction" />
        <mapping class="se.munhunger.wunderbaren.model.persistant.User" />
    </session-factory>
</hibernate-configuration>